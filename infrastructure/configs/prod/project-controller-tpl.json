{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": ":CONTROLLER_NAME",
    "labels": {
      "name": ":PROJECT_NAME",
      "revision": ":REV",
      "environment": ":ENV"
    },
    "namespace": ""
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": ":PROJECT_NAME",
      "revision": ":REV",
      "environment": ":ENV"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": ":PROJECT_NAME",
          "revision": ":REV",
          "environment": ":ENV"
        }
      },
      "spec": {
        "volumes": [
          {"name": "log-storage", "emptyDir": {}}
        ],
        "containers": [
          {
            "name": ":PROJECT_NAME",
            "image": "eu.gcr.io/:PROJECT_ID/:PROJECT_BASE_NAME::REV-:ENV",
            "resources": {
              "limits": {
                "cpu": "80m",
                "memory": "400Mi"
              }
            },
            "ports": [
              {
                "name": "http",
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "Always",
            "volumeMounts": [
              {"name": "log-storage", "mountPath": "/mnt/log"}
            ]
          },
          {
            "name": "sidecar-log-collector",
            "image": "eu.gcr.io/:PROJECT_ID/fluentd-sidecar-gcp:latest",
            "resources": {
              "limits": {
                "cpu": "100m",
                "memory": "200Mi"
              }
            },
            "env": [
              {"name": "FILES_TO_COLLECT", "value": "/mnt/log/general.log /mnt/log/request.log"},
              {"name": "PROJECT_NAME", "value": ":PROJECT_NAME"}
            ],
            "volumeMounts": [
              {"name": "log-storage", "readOnly": true, "mountPath": "/mnt/log"}
            ]
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "Default"
      }
    }
  }
}
